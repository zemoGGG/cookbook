---
import MainLayout from "./MainLayout.astro";
import { marked } from 'marked';

const {
    frontmatter
} = Astro.props;

const {
    title, image, description, difficulty, specialty = false, 
    prepTime, cookTime, servings, ingredients=[], steps=[]
} = frontmatter;

const parsedIngredients = ingredients.map((ingredient: string) => 
    marked.parseInline(ingredient));

const parsedSteps = steps.map((step: string) =>
    marked.parseInline(step));
---

<MainLayout title={title}>
    <div class="header">
        <a href='/'>Home</a>
        
        <h1>{title}</h1>
        {specialty && <span class='star' title='A Matthew Specialty'>â˜…</span>}

        {image && <img src={image} alt={title} />}

        {difficulty &&
            <div class="difficulty">
                Difficulty: {difficulty}
            </div>
        }
    </div>

    <div class="content">
        <div class="description">
            {description} 

            {(prepTime || cookTime || servings) && ( 
                <div class="recipe-meta">
                    <div class="meta-item">
                        <span class="meta-label">Prep Time:</span>
                        <span class="meta-value">{prepTime}</span>
                    </div>
                    <div class="meta-item">
                        <span class="meta-label">Cook Time:</span>
                        <span class="meta-value">{cookTime}</span>
                    </div>
                    <div class="meta-item">
                        <span class="meta-label">Servings:</span>
                        <span class="meta-value">{servings}</span>
                    </div>
                </div>
            )}
        </div>

        <div class="ingredients">
            <h2>Ingredients</h2>
            <ul>
                {parsedIngredients.map((ingredient: string) => ( 
                    <li set:html={ingredient} />
                ))}
            </ul>
        </div>

        <div class="steps">
            <h2>Steps</h2>
            <ol>
                {parsedSteps.map((step: string) => ( 
                    <li set:html={step}/>
                ))}    
            </ol>
        </div>
    </div>
</MainLayout>

<style>
    .header {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        background-color: #deb887;
        padding: 20px;
    }

    .header h1 {
        font-size: 42px;
        font-weight: 600;
        margin-bottom: 10px;
    }

    .header img {
        width: 400px;
        height: 300px;
        object-fit: cover;
        border-radius: 10px;
        margin: 20px 0;
    }

    .header a {
        justify-self: left;
        align-self: flex-start;
    }

    .difficulty {
        font-size: 24px;
        margin-top: 10px;
    }

    .content {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-evenly;
        padding: 20px;
        background-color: #f4f4f4;
    }

    .description, .ingredients, .steps {
        flex-basis: 100%;
        margin-bottom: 20px;
        font-size: 18px;
    }

    .description {
        text-align: center;
        font-size: 20px;
        line-height: 1.6;
    }

    .recipe-meta {
        display: flex;
        justify-content: space-between;
        margin-top: 15px;
        font-style: italic;
    }

    .star {
        color: gold;
        font-size: 36px;
        margin-left: 10px;
    }

    h2 {
        border-bottom: 2px solid #836B8C;
        padding-bottom: 10px;
        margin-bottom: 20px;
    }

    .recipe-meta {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 20px;
        margin: 20px 0;
        text-align: center;
    }

    .meta-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 10px;
        background-color: #f8f8f8;
        border-radius: 8px;
    }

    .meta-label {
        font-weight: 600;
        color: #666;
        margin-bottom: 5px;
    }

    .meta-value {
        font-size: 1.1em;
    }

    @media (max-width: 600px) {
        .recipe-meta {
            grid-template-columns: 1fr;
            gap: 10px;
        }
    }
</style>