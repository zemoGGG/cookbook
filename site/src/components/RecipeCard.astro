---
import { Image } from 'astro:assets';

interface Props {
    name: string;
    image: string;
    link: string;
    specialty?: boolean;
    comingSoon?: boolean;
}

const {
    name,
    image,
    link,
    specialty = false,
    comingSoon = false
} = Astro.props;
---

<div class="card">
    <Image src={image} alt={name} width="275", height="200"/>
    <a href={link}>
        {name}
        {specialty && <span class="star" title="A Matthew Specialty">★</span>}
    </a>
    {comingSoon && <span class="caution" title="Coming Soon">⚠</span>}
</div>

<style>
    .card {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 10px;
    margin: 16px;
    width: 275px;
    height: 200px;
    position: relative;
    }

    .card img {
        max-width: 100%;
        max-height: 100%;
        border-radius: 20px;
        border: 5px solid lightgray;
    }

    .card a {
        position: absolute;
        text-align: center;
        width: 275px;
        text-decoration: none;
        color: white;
        font: 28px "Fira Sans", sans-serif;
    }

    .star {
        color: gold;
        margin-right: 5px;
    }

    .caution {
        position: absolute;
        padding-top: 50px;
        text-align: center;
        font: 32px "Fira Sans", sans-serif;
        color: yellow;
    }
</style>